<h2>Edit User Profile</h2>
<form action="/users" method="POST">
    <div class="form-group">
        <label for="name">Name:</label>
        <input type="text" value="{{name}}" class="form-control" name="name" id="name">
    </div>
    <div class="form-group">
        <label for="name">Emails:</label>
        <input type="text" value="{{emails}}" class="form-control" name="emails" id="emails">
    </div>
    <div class="form-group">
        <label for="name">Home Address:</label>
        <input type="text" value="{{home_addr}}" class="form-control" name="home_addr" id="home_addr">
    </div>
    <div class="form-group">
        <label for="name">Nickname:</label>
        <input type="text" value="{{nick_name}}" class="form-control" name="nick_name" id="nick_name">
    </div>
    <div class="form-group">
        <label for="name">Credit Cards:</label>
        <input type="text" value="{{cards}}" class="form-control" name="cards" id="cards">
    </div>
    <div class="form-group">
        <label for="name">Shipping Address:</label>
        <input type="text" value="{{shipping_addr}}" class="form-control" name="shipping_addr" id="shipping_addr">
    </div>
    <button class="btn btn-primary">Update</button>
</form>

<p><a href="users/{{username}}" target="_blank">View profile</a></p>